<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ToiletriesMenu">

    <CheckBox
        android:id="@+id/cb1"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="93dp"
        android:layout_marginRight="93dp"
        android:text="Toilet Paper"
        android:textColor="#F8F1F5F4"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/cb2"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="167dp"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="92dp"
        android:text="Toothbrush"
        android:textColor="#F8F1F5F4"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/cb3"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="209dp"
        android:layout_marginEnd="89dp"
        android:layout_marginRight="89dp"
        android:text="Toothpaste"
        android:textColor="#F8F1F5F4"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/cb4"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="253dp"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="91dp"
        android:text="Handwash"
        android:textColor="#F8F1F5F4"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/cb5"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="297dp"
        android:layout_marginEnd="108dp"
        android:layout_marginRight="108dp"
        android:text="Shampoo"
        android:textColor="#F8F1F5F4"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/cb6"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="345dp"
        android:layout_marginEnd="125dp"
        android:layout_marginRight="125dp"
        android:text="Moisturiser"
        android:textColor="#F8F1F5F4"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/cb7"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="394dp"
        android:layout_marginEnd="118dp"
        android:layout_marginRight="118dp"
        android:text="Towels"
        android:textColor="#F8F1F5F4"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="525dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Please select the toiletries required"
        android:textColor="#F879E40E"
        android:textFontWeight="12"
        android:textSize="25dp" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cb7"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="134dp"
        android:layout_marginLeft="134dp"
        android:layout_marginTop="46dp"
        android:text="Confirm"
        android:textSize="18sp" />
</RelativeLayout>